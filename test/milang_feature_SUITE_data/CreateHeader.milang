module CreateHeader.

import Steak exposing

alias Cut = Steak.Cut.

expose all type Temp = [, Blue , Rare , MediumRare , Medium , MediumWell , Well , Char].

expose all type Flavor = [, Clean , Spice , Sweet , Buttery , Other Core.String].

expose alias Meal = { , temp = Temp , flavor = Flavor, cut = Cut }.

expose spec cook = Cut -> Temp -> Meal.
function cook cut temp ->
	{ , cut = Cut, temp = Temp, flavor = Clean }.

expose spec season = Flavor -> Meal -> Meal.
function season flavor meal ->
	{ , cut = cut meal, temp = temp meal, flavor = flavor }.
